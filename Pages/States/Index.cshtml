@page
@model CeilApp.Pages.States.IndexModel
@{
    ViewData["Title"] = "States";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-geo-alt-fill"></i> States</h1>
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Name (Arabic)</th>
                            <th>Municipalities</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.States)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.NameAr</td>
                                <td>
                                    @(item.Municipalities?.Count ?? 0)
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                            <i class="bi bi-info-circle"></i> Details
                                        </a>
                                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>