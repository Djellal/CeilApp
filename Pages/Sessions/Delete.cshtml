@page
@model CeilApp.Pages.Sessions.DeleteModel

@{
    ViewData["Title"] = "Delete Session";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="./Index">Sessions</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Delete</li>
                </ol>
            </nav>
            <h1 class="display-5 fw-bold text-danger"><i class="bi bi-exclamation-triangle me-2"></i>Delete Session</h1>
            <p class="lead">Are you sure you want to delete this academic session?</p>
            <hr class="my-4" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-trash me-2"></i>Confirm Deletion
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <strong>Warning:</strong> This action cannot be undone. Deleting this session may affect related data.
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Session Code:</div>
                        <div class="col-md-8">@Html.DisplayFor(model => model.Session.SessionCode)</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Session Name (English):</div>
                        <div class="col-md-8">@Html.DisplayFor(model => model.Session.SessionName)</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Session Name (Arabic):</div>
                        <div class="col-md-8" dir="rtl">@Html.DisplayFor(model => model.Session.SessionNameAr)</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Start Date:</div>
                        <div class="col-md-8">
                            <i class="bi bi-calendar-event text-muted me-1"></i>
                            @Html.DisplayFor(model => model.Session.StartDate)
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">End Date:</div>
                        <div class="col-md-8">
                            <i class="bi bi-calendar-event text-muted me-1"></i>
                            @Html.DisplayFor(model => model.Session.EndDate)
                        </div>
                    </div>
                    
                    <form method="post" class="mt-4">
                        <input type="hidden" asp-for="Session.Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="./Index" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-arrow-left me-1"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i> Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
