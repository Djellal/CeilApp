@page
@model CeilApp.Pages.Admin.ManageUserRolesModel
@{
    ViewData["Title"] = "Manage User Roles";
}

<h1><i class="bi bi-person-gear"></i> Manage Roles for @Model.UserName</h1>

<form method="post">
    <input type="hidden" asp-for="UserId" />
    
    <div class="card mb-3">
        <div class="card-header">
            <h5>Assign Roles</h5>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.UserRoles.Count; i++)
            {
                <div class="form-check mb-2">
                    <input type="hidden" asp-for="@Model.UserRoles[i].RoleId" />
                    <input type="hidden" asp-for="@Model.UserRoles[i].RoleName" />
                    <input class="form-check-input" type="checkbox" asp-for="@Model.UserRoles[i].IsSelected" />
                    <label class="form-check-label" asp-for="@Model.UserRoles[i].IsSelected">
                        @Model.UserRoles[i].RoleName
                    </label>
                </div>
            }
        </div>
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="./Users" class="btn btn-secondary">Cancel</a>
    </div>
</form>