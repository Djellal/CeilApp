@page
@model CeilApp.Pages.Admin.UsersModel
@{
    ViewData["Title"] = "User Management";
}

<h1><i class="bi bi-people"></i> User Management</h1>

<div class="row mb-3">
    <div class="col-md-6">
        <form method="get">
            <div class="input-group">
                <span class="input-group-text">Filter by Role</span>
                <select asp-for="SelectedRole" asp-items="Model.RolesList" class="form-select">
                    <option value="">All Roles</option>
                </select>
                <button type="submit" class="btn btn-primary">Filter</button>
            </div>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.Roles</td>
                    <td>
                        <a asp-page="./EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-primary">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-page="./ManageUserRoles" asp-route-id="@user.Id" class="btn btn-sm btn-secondary">
                            <i class="bi bi-person-gear"></i> Manage Roles
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>