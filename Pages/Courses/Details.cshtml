@page
@model CeilApp.Pages.Courses.DetailsModel
@{
    ViewData["Title"] = "Course Details";
}

<h1><i class="bi bi-info-circle"></i> Course Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Code</dt>
        <dd class="col-sm-10">@Model.Course.Code</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Course.Name</dd>
        <dt class="col-sm-2">Name (Arabic)</dt>
        <dd class="col-sm-10">@Model.Course.NameAr</dd>
        <dt class="col-sm-2">Duration</dt>
        <dd class="col-sm-10">@Model.Course.Duration</dd>
        <dt class="col-sm-2">Course Type</dt>
        <dd class="col-sm-10">@(Model.Course.CourseType?.Name ?? "N/A")</dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Course.Id" class="btn btn-primary">Edit</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>