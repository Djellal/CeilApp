@page
@model CeilApp.Pages.Courses.IndexModel
@{
    ViewData["Title"] = "Courses";
}

<h1><i class="bi bi-book"></i> Courses</h1>

<p>
    <a asp-page="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Name (Arabic)</th>
            <th>Duration</th>
            <th>Course Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Course) {
        <tr>
            <td>@item.Code</td>
            <td>@item.Name</td>
            <td>@item.NameAr</td>
            <td>@item.Duration</td>
            <td>@(item.CourseType?.Name ?? "N/A")</td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary"><i class="bi bi-pencil"></i> Edit</a>
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"><i class="bi bi-info-circle"></i> Details</a>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>