@page
@model CeilApp.Pages.Professions.EditModel
@{
    ViewData["Title"] = "Edit Profession";
}

<div class="container py-4">
    <h1><i class="bi bi-pencil"></i> Edit Profession</h1>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Profession.Id" />
                        <div class="mb-3">
                            <label asp-for="Profession.Name" class="form-label"></label>
                            <input asp-for="Profession.Name" class="form-control" />
                            <span asp-validation-for="Profession.Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Profession.NameAr" class="form-label"></label>
                            <input asp-for="Profession.NameAr" class="form-control" />
                            <span asp-validation-for="Profession.NameAr" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Profession.FeeValue" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Profession.FeeValue" class="form-control" type="number" step="0.01" />
                            </div>
                            <span asp-validation-for="Profession.FeeValue" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-secondary">Back to List</a>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}