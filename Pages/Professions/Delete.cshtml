@page
@model CeilApp.Pages.Professions.DeleteModel
@{
    ViewData["Title"] = "Delete Profession";
}

<div class="container py-4">
    <h1><i class="bi bi-trash"></i> Delete Profession</h1>
    <hr />
    
    <div class="alert alert-danger">
        <h4><i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this profession?</h4>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-briefcase"></i> Profession Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.Profession.Name</dd>
                        
                        <dt class="col-sm-3">Name (Arabic)</dt>
                        <dd class="col-sm-9">@Model.Profession.NameAr</dd>
                        
                        <dt class="col-sm-3">Fee Value</dt>
                        <dd class="col-sm-9">@Model.Profession.FeeValue.ToString("C")</dd>
                    </dl>
                    
                    <form method="post">
                        <input type="hidden" asp-for="Profession.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>