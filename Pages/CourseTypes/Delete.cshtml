@page
@model CeilApp.Pages.CourseTypes.DeleteModel
@{
    ViewData["Title"] = "Delete Course Type";
}

<h1><i class="bi bi-trash"></i> Delete Course Type</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.CourseType.Name</dd>
        <dt class="col-sm-2">Name (Arabic)</dt>
        <dd class="col-sm-10">@Model.CourseType.NameAr</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.CourseType.Description</dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="CourseType.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>